<div id="post_show_wrapper" class="skinny-wrapper wrapper-padding" >
	<header>


		<p class="date">
			<%= @post.created_at.strftime("%A, %B %d")%>
		</p>
		<h1><%= @post.title %></h1>
		<hr>
	</header>
	<div id="content"> 
		<%=  markdown @post.content %>
	</div>
	<% if user_signed_in?%>
	<div id="admin_links">
		<%= link_to "Edit Article", edit_post_path(@post)%>
		<%= link_to "Delete Article", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}%>

	</div>
	<%end%>
		<div id="share_box">
		<p>Share the Lorem ipsum dolor</p>
		<a href="#"><i class="fab fa-instagram-square fa-2x"></i></a>
	    <a href="#"><i class="fab fa-facebook-square fa-2x"></i></a>
	    <a href="#"><i class="fab fa-twitter-square fa-2x"></i></a>
	    <br>
	    <br>
	    <br>
	   


		
	</div>
	
	<%= render 'disqus' %>

</div>









