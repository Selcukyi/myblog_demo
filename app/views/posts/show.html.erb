<div id="post_show_wrapper" class="skinny-wrapper wrapper-padding" >
	<header>


		<p class="date">
			<%= @post.created_at.strftime("%A, %B %d")%>
		</p>
		<h1>The Do List</h1>
		<hr>
	</header>
	<div id="content"> 
		<%=  markdown @post.content %>
	</div>
	<div id="share_box">
		<p>Share the Lorem ipsum dolor</p>
		<a href="#"><i class="fab fa-instagram-square fa-2x"></i></a>
	    <a href="#"><i class="fab fa-facebook-square fa-2x"></i></a>
	    <a href="#"><i class="fab fa-twitter-square fa-2x"></i></a>
	    <br>
	    <br>
	    <br>
	    <%= link_to "Edit", edit_post_path(@post) %>
		<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: " Are you sure you want to delete this post?"} %>

	</div>


</div>








